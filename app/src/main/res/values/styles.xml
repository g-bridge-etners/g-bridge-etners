<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="LoadingAppTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/loading_screen</item>
    </style>

    <style name="ActionBar.nameText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="admin_home_text_view">
        <item name="android:paddingLeft">@dimen/admin_layout_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/admin_layout_horizontal_padding</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="admin_home_button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingLeft">@dimen/admin_layout_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/admin_layout_horizontal_padding</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:background">@drawable/bg_white_button</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorSoftblack</item>
    </style>


    <style name="list_rv_divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


    <style name="dialog_attendance_management_edit_text">
        <item name="android:textColor">@color/colorSoftblack</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="dialog_attendance_management_textview">
        <item name="android:textColor">@color/colorSoftblack</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>


</resources>
